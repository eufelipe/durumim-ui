    "Web",
    "Development",
    "Javascript",
    "Design system"
  ],
  "author": "Felipe Rosas (https://eufelipe.com)",
  "license": "MIT",
  "devDependencies": {
    "@durumim-ui/ts-config": "*",
    "@durumim-ui/eslint-config": "*",
    "@durumim-ui/colors": "*",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  }
