{
  "name": "@durumim-ui/core",
  "version": "0.1.0",
  "description": "An open-source design system in JavaScript for creating consistent and high-quality user interfaces.",
  "author": "Felipe Rosas (https://eufelipe.com)",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/eufelipe/durumim-ui.git"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "format:check": "prettier --check ./packages/**/src",
    "format:write": "prettier --write ./packages/**/src",
    "lint:check": "eslint ./packages/**/src/**/*.ts*",
    "lint:fix": "eslint ./packages/**/src/**/*.ts* --fix",
    "cspell": "cspell \"./packages/**/src/**/*\"",
    "prepare": "husky install"
  },
  "keywords": [
    "design system",
    "ui",
    "javascript",
    "durumim"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "cspell": "^6.31.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "turbo": "^1.9.1"
  }
}
